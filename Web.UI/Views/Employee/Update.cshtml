@using Models.UI
@model EmployeeModel
@{
    ViewBag.Title = "Update";
}


<!-- breadcrumb-section -->
<div class="breadcrumb-section breadcrumb-bg">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 offset-lg-2 text-center">
                <div class="breadcrumb-text">
                    <h1>Update Employee</h1>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- end breadcrumb section -->
<div class="row">
    <div class="col-md-3">

    </div>
    <div class="col-md-6">
        @using (Html.BeginForm("Update", "Employee", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            <br />
            <hr />
            @Html.ValidationSummary("", new { @class = "text-danger" })
            @Html.HiddenFor(m => m.EmployeeId)
            <div class="row">
                <div class="form-group col-md-6">
                    @Html.LabelFor(m => m.Name, new { @class = "col-md-12 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group col-md-6">
                    @Html.LabelFor(m => m.Age, new { @class = "col-md-12 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.Age, new { @class = "form-control" })
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="form-group col-md-6">
                    @Html.LabelFor(m => m.GenderId, new { @class = "col-md-12 control-label" })
                    <div class="col-md-10">
                        @Html.DropDownList("GenderId", new SelectList(Model.Genders, "GenderId", "GenderName", Model.GenderId), new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.GenderId, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group col-md-6">
                    @Html.LabelFor(m => m.Email, new { @class = "col-md-12 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="form-group col-md-6">
                    @Html.LabelFor(m => m.ReportingLine, new { @class = "col-md-12 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.ReportingLine, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group col-md-6">
                    @Html.LabelFor(m => m.RoleId, new { @class = "col-md-12 control-label" })
                    <div class="col-md-10">
                        @Html.DropDownList("RoleId", new SelectList(Model.Roles, "RoleId", "RoleName", Model.RoleId), new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.RoleId, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" class="btn btn-default" value="Update" />
                </div>
            </div>
        }
    </div>
    <div class="col-md-3">

    </div>
</div>



